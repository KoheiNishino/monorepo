{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"timezone": "Asia/Tokyo",
	"schedule": ["before 7am every weekday"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchManagers": ["pnpm"],
			"rangeStrategy": "update-lockfile"
		}
	],
	"vulnerabilityAlerts": {
		"enabled": true,
		"automerge": false
	}
}
